def maths_operations():
    """
    This function asks for two numbers as input and returns their sum, difference, product, division, and modulus
    """
    # Ask for the first number
    num1 = float(input("Enter the first number: ")) 

    # Ask for the second number
    num2 = float(input("Enter the second number: ")) 

    # Add the two numbers
    add = num1 + num2 

    # Subtract the second number from the first number
    sub = num1 - num2 

    # Multiply the two numbers
    mul = num1 * num2 

    # Divide the first number by the second number
    div = num1 / num2 

    # Calculate the modulus of the first number by the second number
    mod = num1 % num2 

    # Return the results
    return add, sub, mul, div, mod 

# Call the maths_operations function
result = maths_operations() 

# Print the result
print(result)
